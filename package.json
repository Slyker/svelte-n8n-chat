{
	"name": "svelte-n8n-chat",
	"version": "2.1.0",
	"description": "Production-ready AI chat components for Svelte 5 - Styled and headless implementations with streaming, i18n, and session management",
	"author": "Slyker",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Slyker/svelte-n8n-chat.git"
	},
	"bugs": {
		"url": "https://github.com/Slyker/svelte-n8n-chat/issues"
	},
	"homepage": "https://github.com/Slyker/svelte-n8n-chat#readme",
	"keywords": [
		"svelte",
		"svelte5",
		"chat",
		"ai",
		"n8n",
		"component",
		"headless",
		"streaming",
		"websocket",
		"i18n",
		"typescript",
		"runes"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-package",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint . && prettier --check .",
		"format": "prettier --write .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"LICENSE.md",
		"README.md"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"dependencies": {
		"isomorphic-dompurify": "^2.31.0",
		"marked": "^16.4.1",
		"uuid": "^10.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.38.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.47.1",
		"@sveltejs/package": "^2.5.4",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.14",
		"@types/dompurify": "^3.0.5",
		"@types/marked": "^5.0.2",
		"@types/node": "^22",
		"@types/uuid": "^10.0.0",
		"@vitest/browser": "^3.2.4",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.4",
		"globals": "^16.4.0",
		"mdsvex": "^0.12.6",
		"playwright": "^1.56.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"publint": "^0.3.14",
		"svelte": "^5.41.0",
		"svelte-check": "^4.3.3",
		"tailwindcss": "^4.1.14",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.1",
		"vite": "^7.1.10",
		"vitest": "^3.2.4",
		"vitest-browser-svelte": "^1.1.0"
	}
}
